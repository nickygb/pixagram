{
  "compilerOptions": {
    "lib": ["esnext"],
    "moduleResolution": "node",
    "outDir": "dist",
    "target": "ESNext",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}